.post-wrapper
  overflow: hidden

  *
    max-width: 100%

  aside
    color: #aaa

  hr
    border: 1px solid #ccc

  h1
    font-size: 2em
    margin: 0
    font-weight: 300
    line-height: 1.2

    a
      text-decoration: none
      color: $black

      &:hover
        color: $blue

  h2, h3, h4, h5, h6
    font-weight: 300

  a.anchor
    text-decoration: none
    color: $black

    &:hover
      color: $blue
      text-decoration: underline

  blockquote
    margin: 1em

  blockquote
    blockquote
      margin-left: 0
      font-size: 2em
      font-weight: 600
      color: $blue !important
      padding-left: 0
      padding-right: 0
      text-align: center

      p
        margin: 0
        line-height: 1.2
