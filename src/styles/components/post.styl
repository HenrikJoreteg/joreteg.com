.post-wrapper
  overflow: hidden
    
    *
      max-width: 100%

  aside
    color: #aaa

  hr
    border: 1px solid #ccc

  h1
    font-size: 2em
    margin: 0
    font-weight: 300
    line-height: 1.2

    a
      text-decoration: none 
      color: $black
      
      &:hover
        color: $blue

  h2, h3, h4, h5, h6
    font-weight: 300

  a.anchor
    text-decoration: none  
    color: $black
      
    &:hover
      color: $blue
      text-decoration: underline  
     